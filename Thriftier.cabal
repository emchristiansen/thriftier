build-type:          Simple
cabal-version:       >=1.16

library
  hs-source-dirs:
    lib 

  default-extensions: 
    FlexibleInstances, 
    FlexibleContexts,
    FunctionalDependencies,
    MultiParamTypeClasses,
    TemplateHaskell,
    TypeSynonymInstances

  default-language: Haskell2010

  ghc-options: -Wall -auto-all -caf-all -threaded -O2 
  -- -fllvm

  exposed-modules:
   Thriftier.CPPSource

  build-depends:
    base,
    lens

executable thriftier
  hs-source-dirs:
    bin

  main-is:
    Thriftier.hs
 
  default-language:
    Haskell2010

  build-depends:
    Thriftier,
    base,
    filemanip,
    process,
    filepath,
    regex-compat
